<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#524E4F"
    app:cardCornerRadius="10dp">
    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/notepriority"
        android:background="@drawable/medip"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Title"
            android:id="@+id/notesTitle"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/notessubject"
            android:text="wofianoiawefnaoifnaifnapioefnaiofaeiofaniopfnoie"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notesdate"
            android:textColor="@color/white"
            android:text="4 january 2021"
            android:layout_marginTop="10dp"
            android:textSize="18dp"/>
    </LinearLayout>



</androidx.cardview.widget.CardView>
</LinearLayout>